<!-- user login page -->

<div class="container"><h4 class="subtitle text-center">CleanUpCity</h4>
<div class="form">

    <%flash.each do |k,v|%>
  <h2 id="<%=   k %>"> <%= v %></h2>
    <%end%>

    <div class="col-md-4 col-md-offset-4">
      <div class="text-center">
          <%= image_tag "cleancitylogosmall.png" %>
        </div>

      <%= form_for :user do |f| %>
        <p></p>
        <%= f.text_field :email, required: true, placeholder: "Enter email", class: "form-control" %><br>
        <%= f.password_field :password, placeholder: "Password", class: "form-control" %><br>
        <%= f.submit "login", class: "btn form-control btn-primary" %><br>
        <div class="text-center"><%= link_to "Forgot Password?", new_password_path %></div>
      <% end %>

    </div>

</div>
</div>