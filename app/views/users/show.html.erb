<!-- user - show.html.erb -->

<h1>User Dashboard</h1>

<div class="container">
  <%= form_for @user do |f| %>
    <h3 style="margin: -3px;">
    <%= f.label :email, "#{@user.email}" %></br>

    <% if @user.id == @current_user.id %>
      <%= link_to "View All Your Images", user_images_path(@current_user) %>
      <%= link_to "Upload A New Image", new_image_path(@current_user) %>
  </br></br>
    <% end %>

  <% end %>
</div>