<!-- user - show.html.erb -->
<!-- user home page
 -->
<div class="container">
  <%= form_for @user do |f| %>
    <h3 style="margin: -3px;">
      <%= f.label :first_name, "Welcome #{@user.first_name} to your homepage" %></br>

    <h3 style="margin: -3px;">
    <%= f.label :email, "#{@user.email}" %></br>
    <span class="username"><%=@user.first_name %> <%=@user.last_name %></span>

    <% if @current_user and @user.id == @current_user.id %>
      <h3> Write something here!</h3>
  </br></br>
    <% end %>

    <h3>Write a blog Post!</h3>
    <%= f.text_area :note %><br/>


    <div class="col-md-2">
      <%= link_to "Edit profile", edit_user_path(@user), class: "btn btn-success" %>
    </div>

  <% end %>
</div>