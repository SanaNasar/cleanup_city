<!-- edit user info page -->
<div class="container">
  <h1 class="subtitle text-center"> <h1>Edit Your Profile </h1> 
  <div class="form">

  <% user_path @user %>

  <div class="col-md-4 col-md-offset-4">

    <%= form_for @user do |f| %>

      <%= f.text_field :first_name, placeholder: @user.first_name, class: "form-control"%><br>
      <%= f.text_field :last_name, placeholder: @user.last_name, class: "form-control"%><br>
      <%= f.text_field :email, placeholder: @user.email, class: "form-control"%><br>
      <%= f.submit "Update profile", class: "btn form-control btn-success" %>

    <% end %>

  </div>
</div>
</div>